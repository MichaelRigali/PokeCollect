<html>

<head>
	<title>Edit Pokemon Card Spec</title>
    <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='style.css') }}">
</head>

<body>
    <div>
        <table border="1" cellpadding="5"> 
            <caption> Editing Shipment: </caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>

        <div id="edit">
            <!-- form to edit data in Pokemon Card Specs-->
            <form id="Edit_PokemonCardSpec" action="/edit_pokemoncardspec/{{data[0].product_id}}" method="post">
                <legend><strong>Edit Pokemon Card Spec</strong></legend>
                <fieldset>
                    <input type="hidden" value="{{data[0].product_id}}" class="form-control" id="product_id" name="product_id" required>

                    <label for="model">Card Name:</label>
                    <input type="text" value="{{data[0].card_name}}" class="form-control" id="card_name" name="card_name" required>

                    <label for="model">Price:</label>
                    <input type="text" value="{{data[0].price}}" class="form-control" id="price" name="price" required>

                    <label for="model">Grade:</label>
                    <input type="text" value="{{data[0].grade}}" class="form-control" id="grade" name="grade" required>

                    <label for="model">Holographic:</label>
                    <input type="text" value="{{data[0].holographic}}" class="form-control" id="holographic" name="holographic" required>

                    <label for="model">Edition:</label>
                    <input type="text" value="{{data[0].edition}}" class="form-control" id="edition" name="edition" required>

                    <label for="model">Quantity Available:</label>
                    <input type="text" value="{{data[0].quantity_available}}" class="form-control" id="quantity_available" name="quantity_available" required>

                    <label for="model">Card Set:</label>
                    <input type="text" value="{{data[0].card_set}}" class="form-control" id="card_set" name="card_set" required>

                    <label for="model">Language:</label>
                    <input type="text" value="{{data[0].language}}" class="form-control" id="language" name="language" required>
                
                </fieldset>
                <input type="submit" value="Edit Pokemon Card Spec" name="PokemonCardSpec" class="btn btn-primary" style="margin:.5rem;">
                <a href='/shipments'><input class="btn" type="button" value="cancel"></a>
            </form>
</html>